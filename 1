    <button onclick="calculateScore()">결과 확인</button>

    <div class="result" id="result"></div>

    <script>
        function calculateScore() {
            let score = 0;
            for (let i = 1; i <= 10; i++) {
                let q = document.querySelector('input[name="q' + i + '"]:checked');
                if (q) {
                    score += parseInt(q.value);
                }
            }

            let resultText = "";
            if (score >= 35) {
                resultText = "부부 생활에 매우 만족하고 있습니다.";
            } else if (score >= 25) {
                resultText = "부부 생활에 대체로 만족하고 있습니다.";
            } else if (score >= 15) {
                resultText = "부부 생활에 어느 정도 만족하고 있습니다.";
            } else {
                resultText = "부부 생활에 불만이 많습니다.";
            }

            document.getElementById("result").innerHTML = "총점: " + score + "점<br>" + resultText;
        }
    </script>

